<%= form_for @invoice do |f| %>

    <% if @invoice.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited
            this invoice from being saved:</h2>
          <ul>
            <% @invoice.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :client_id %>
      <%= collection_select(:invoice, :client_id, @clients, :id, :name) %>
    </div>

    <div class="checkbox">
      <label>
        <%= f.check_box :paid %> Paid
      </label>
    </div>

    <div class="form-group">
      <%= f.label :total %>
      <%= f.text_field(:total) %>
    </div>

    <div class="form-group">
      <%= f.label :starts_at %>
      <%= date_field_tag('invoice[starts_at]', 1.month.ago.strftime('%Y-%m-%d')) %>
    </div>

    <div class="form-group">
      <%= f.label :ends_at %>
      <%= date_field_tag('invoice[ends_at]', Time.now.strftime('%Y-%m-%d')) %>
    </div>

<% end %>