<% content_for :crumbs do %>
    <%= render 'crumbs' %>
    <%= render 'crumb', object: @payment %>
    <li class="pull-right"><%= ibtn_link_to('edit', edit_payment_path(@payment)) %></li>
<% end %>

<dl class="dl-horizontal">
    <dt>Id</dt>
    <dd><%= @payment.id %></dd>
    <dt>Client</dt>
    <dd><%= @payment.client %></dd>
    <dt>Total</dt>
    <dd><%= @payment.total %></dd>
</dl>