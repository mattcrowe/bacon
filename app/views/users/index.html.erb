<% content_for :crumbs do %>
    <%= render 'crumbs' %>
    <li class="pull-right"><%= ibtn_link_to('add', new_user_path) %></li>
<% end %>

<div class="table-responsive">
  <table class="index">
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th></th>
    </tr>

    <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td class="action">
            <div class="dropdown btn-group">
              <a href="<%= user_path(user) %>" class="btn">OPEN</a>
              <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">
                <span class="caret"></span></a>
              <%= render 'crumb', user: user %>
            </div>
          </td>
        </tr>
    <% end %>

  </table>
</div>