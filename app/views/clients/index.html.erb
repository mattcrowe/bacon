<% content_for :crumbs do %>
    <%= render 'crumb_all' %>
    <li class="pull-right"><%= ibtn_link_to('add', new_client_path) %></li>
<% end %>

<div class="table-responsive">
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Rate</th>
            <th>Invoiced</th>
            <th>Paid</th>
            <th>Owed</th>
            <th></th>
        </tr>

        <% @clients.each do |client| %>
        <tr>
            <td><%= client.id %></td>
            <td><%= client.name %></td>
            <td><%= client.contact %></td>
            <td><%= client.email %></td>
            <td><%= client.rate %></td>
            <td><%= number_to_currency(client.invoiced) %></td>
            <td><%= number_to_currency(client.paid) %></td>
            <td><%= number_to_currency(client.owed) %></td>
            <td><%= ibtn_link_to('OPEN', client_path(client)) %></td>
        </tr>
        <% end %>

    </table>
</div>