<tr>
  <td class="task_id"><%= task.id %></td>
  <td class="task_client"><%= task.project.client %></td>
  <td class="task_project"><%= task.project %></td>
  <td class="task_name"><%= task.name %></td>
  <td class="action">
    <div class="dropdown btn-group">
      <a href="<%= task_path(task) %>" class="btn">OPEN</a>
      <a href="#" class="btn dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
      <%= render 'tasks/crumb', task: task %>
    </div>
  </td>
</tr>